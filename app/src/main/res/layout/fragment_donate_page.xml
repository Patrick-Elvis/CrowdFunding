<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="navigationFrag.DonatePage">

    <!-- TODO: Update blank fragment layout -->


        <RelativeLayout
            android:id="@+id/activity_donate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="0dp">


            <LinearLayout
                android:id="@+id/foundDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bglayer"
                    android:gravity="center"
                    android:text="Bank Details!"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/holderName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Holder Name : Meshu DevNath "
                    android:textColor="#010101"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bankAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Bank A/C : 211 120 5501 "
                    android:textColor="#010101"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/BkashNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Bkash Number : 01960490830 "
                    android:textColor="#010101"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ContactNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Contact Number : 01960490830 "
                    android:textColor="#010101"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <TextView
                android:id="@+id/click"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/foundDetails"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bglayer"
                android:gravity="center"
                android:text="Pay By Click!"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/gatewayTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/click"
                android:layout_marginBottom="20dp"
                android:text="You can also donate through our online payment gateway"
                android:textColor="#555"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/payBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gatewayTitle"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$10"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$20"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$30"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$50"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/payBtn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/payBtn"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$100"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$500"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/otherPayBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ddd"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp"
                    android:inputType="number"
                    android:hint="Custom amount"
                    android:textColor="#222"
                    android:textSize="14dp" />

            </LinearLayout>


            <Button
                android:id="@+id/finalSubmitBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:background="#2BDE73"
                android:text="Donate Now!"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

</FrameLayout>
