<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/updateNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update #2"
        android:textSize="14sp"
        android:textColor="#64db39"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:id="@+id/updateDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="May 05 2017"
        android:textSize="13sp"
        android:layout_alignParentRight="true"
        android:textColor="#403d3d"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Announcing Our 1st Stretch Goal!!"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:textColor="#010101"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/updateDate"/>
    <TextView
        android:id="@+id/updateComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textColor="#666"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/title"/>
    <TextView
        android:id="@+id/updateDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s."
        android:layout_below="@+id/updateComment"
        android:textColor="#010101"
        android:textSize="14sp"
        android:lineSpacingExtra="8dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="15dp"/>
    <ImageView
        android:id="@+id/updateImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/updateDes"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/updateDes1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s."
        android:layout_below="@+id/updateImage"
        android:textColor="#010101"
        android:textSize="16sp"
        android:lineSpacingExtra="8dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>
    <View
        android:layout_width="100dp"
        android:layout_height="3dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/updateDes1"
        android:background="#64db39"/>


</RelativeLayout>