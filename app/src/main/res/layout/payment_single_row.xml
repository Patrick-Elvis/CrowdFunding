<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pay_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    android:layout_marginBottom="16dp"
    android:orientation="vertical"
    android:background="@drawable/bglayer"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageIcon1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/user1"
                android:layout_marginLeft="6dp"
                />

            <TextView
                android:id="@+id/payUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meshu"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                android:textColor="#010101"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Title:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:textColor="#010101"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/payUserName"/>

            <TextView
                android:id="@+id/payTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="May 20 2017"
                android:textSize="13sp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="15dp"
                android:textColor="#555"
                android:layout_marginBottom="5dp"
               />
        </LinearLayout>



        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/paidAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" $20 Paid "
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="#0E982D"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>




</LinearLayout>


